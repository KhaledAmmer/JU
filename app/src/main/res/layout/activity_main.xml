<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@drawable/style"
    tools:openDrawer="end">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/style"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.NoActionBar"
            android:id="@+id/toolbar"
            app:title="CHEMICAL ENGINEERING"

            />
        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            android:layout_gravity="center"
            ads:adUnitId="@string/adshome" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:alignmentMode="alignMargins"
                    android:backgroundTint="#37F6EDED"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:paddingTop="5dp"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#37F6EDED"
                            android:gravity="center"
                            android:onClick="Bu_Jam3_Ejb"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/v3"
                                />

                            <TextView
                                android:layout_width="92dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات الجامعة الإختيارية"
                                android:textColor="#050505"
                                android:textFontWeight="902"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="Bu_Jame_E5ty"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/v3" />

                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات الجامعة الإجبارية"
                                android:textColor="#050505"
                                android:textFontWeight="902"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="Bu_Klia_ej"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/b44" />

                            <TextView
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات التخصص الإجبارية"
                                android:textColor="#151511"
                                android:textFontWeight="902"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="Bu_T599_Ej"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/v4" />

                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات الكلية الإجبارية"
                                android:textColor="#0E0E0A"
                                android:textFontWeight="902"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="Bu_3AM_Ej"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="86dp"
                                android:src="@drawable/download" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات عامة إجبارية"
                                android:textColor="#131312"
                                android:textFontWeight="902"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        android:backgroundTint="#37F6EDED"
                        android:elevation="6dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="Bu_T599_E5Tur"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/c1" />

                            <TextView
                                android:layout_width="83dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:fontFamily="@font/se"
                                android:gravity="center"
                                android:text="متطلبات التخصص الاختيارية"
                                android:textColor="#10100C"
                                android:textFontWeight="902"
                                android:textSize="11sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </GridLayout>




            </LinearLayout>

        </ScrollView>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/style"
                android:textAlignment="center"
                app:itemIconSize="30dp"
                app:itemIconTint="#0E1010"
                app:itemTextColor="#08090B"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/menu"

                />

        </RelativeLayout>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navi"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"

        />
</androidx.drawerlayout.widget.DrawerLayout>